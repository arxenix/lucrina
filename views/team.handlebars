{{#if team}}
    Team: {{team.name}}
    
{{else}}
    <p>You do not currently have a team!</p>
    
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#menu1">Create a Team</a></li>
      <li><a data-toggle="tab" href="#menu2">Join Team</a></li>
      <li><a data-toggle="tab" href="#menu3" class="disabled" disabled>Find Team</a></li>
    </ul>
    
    <div class="tab-content">
      <div id="menu1" class="tab-pane fade in active">
        <h3>Create a New Team</h3>
        <form id="createTeam" role="form">
            <input type="text" class="form-control" placeholder="Team name">
            <input type="password" class="form-control" placeholder="Team join code">
            <button class="btn btn-success" type="button">Join Team</button>
        </form>
      </div>
      
      <div id="menu2" class="tab-pane fade">
        <h3>Join a Team</h3>
        <form id="joinTeam" role="form">
            <input type="text" class="form-control" placeholder="Team name">
            <input type="password" class="form-control" placeholder="Team join code">
            <button class="btn btn-success" type="button">Join Team</button>
        </form>
      </div>
      
      <div id="menu3" class="tab-pane fade">
        <h3>Find a Team</h3>
        <p>Some content in menu 2.</p>
      </div>
    </div>
{{/if}}
